<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="controllers.MainController">
    <HBox>
        <Button fx:id="customerNavButton" onAction="#handleCustomerNav" text="Customers"
                disable="true"/>
        <Button fx:id="appointmentNavButton" onAction="#handleAppointmentNav"
                text="Appointments" disable="true"/>
        <Button fx:id="reportNavButton" onAction="#handleReportNav" text="Reports"
                disable="true"/>
    </HBox>
    <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS"/>
</VBox>